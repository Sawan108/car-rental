<div class="container mt-4">
  <div class="row">
    <div class="col-6 m-auto">
      <div class="car-form form-book p-4 border border-3 shadow-lg">
        <h1 class="text-center fs-1">Add a new Car</h1>
        <div class="mt-3">
          <%= simple_form_for(@car) do |f| %>
            <div class="form-group p-2">
              <%= f.label :model %>
              <%= f.text_field :model, class: 'form-control' %>
            </div>
            <div class="form-group p-2">
              <%= f.label :price %>
              <%= f.number_field :price, class: 'form-control' %>
            </div>
            <div class="form-group p-2">
              <%# <%= f.label :picture_url %>
              <%= f.input :photo, as: :file %>
              <%# <%= f.text_field :picture_url, class: 'form-control' %>
            </div>
            <div class="mt-3 p-2">
                <%= f.submit class: 'btn btn-primary d-grid gap-2 col-6 mx-auto my-2 rounded-3' %>
                <%= link_to 'Cancel', cars_path, class: 'btn btn-outline-warning d-grid gap-2 col-6 mx-auto my-2 rounded-3' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
