<div class="row g-0">
  <div  class="col-sm-6 col-md-8">
    <br>
    <br>
    <br>
    <div>

      <%= cl_image_tag @car.photo.key, crop: :fill, class: "shadow-lg img-fluid" %>

    </div>

    <div>
      <br>
      <div class="d-grid gap-2 col-6 mx-auto">
        <%= link_to "Edit your car", edit_car_path, class: "btn btn-ghost" %>
      </div>
      <br>
      <h1>Reviews :</h1>
      <% @reviews.each do |review| %>
        <% if review.car_id == @car.id %>
          <div class="card-product shadow">
            <div class="card-product-infos">
              <ul class = "pt-3">
                <li><h2> <%= review.comment %></h2></li>
              </ul>
              <p class = "ps-3 pb-3" >Rating : <%= review.rating.to_i%> out of 5</i> </p>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="col-6 col-md-4 ps-3">
    <br>
    <br>
    <br>
    <h1 class= "text-center">Cost per day</h1>
    <h1 class= "text-center">$ <%= @car.price %></h1>
    <br>
    <br>
    <h2>Book for</h2>

    <%= simple_form_for [@car, Booking.new] do |f| %>
      <%= f.input :start_date %>
      <br>
      <%= f.input :end_date %>
      <br>

      <%= f.button :submit, "Book Me" , class: "btn btn-success  d-grid gap-2 col-6 mx-auto my-2 rounded-3" %>
      <%= link_to  "Back", cars_path , class: "btn btn-outline-warning  d-grid gap-2 col-6 mx-auto my-2 rounded-3" %>
    <% end %>

  </div>
</div>
