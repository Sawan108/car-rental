<div class="container mt-4">
  <div class="row">
    <div class="col-6 m-auto">
      <div class="car-form form-book p-4 border border-3 shadow-lg">
        <h1 class="text-center fs-1">Add Review</h1>
        <div class="mt-3">
          <%= simple_form_for [@car, @review] do |f| %>
              <br>
              <%= f.input :comment %>
              <br>
              <%= f.input :rating %>
              <br>

              <%= f.button :submit, "Review" , class: "'btn btn-primary d-grid gap-2 col-6 mx-auto my-2 rounded-3" %>
              <%= link_to  "Back", bookings_path , class: "btn btn-outline-warning d-grid gap-2 col-6 mx-auto my-2 rounded-3" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
