<div class="container mt-4">
  <div class="row">
    <div class="col-6 m-auto">
      <div class="car-form form-book p-4 border border-3 shadow-lg">
        <h2 class="text-center fs-1">Log in</h2>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">

            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <br>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>
          <br>
          <br>
          <div class= "btn btn-primary d-grid gap-2 col-6 mx-auto my-2 rounded-pill">
            <%= f.button :submit, "Log in" ,style: 'color: white;'%>
          </div>
        <% end %>
        <br>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
